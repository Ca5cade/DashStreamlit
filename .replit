modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", '''mkdir -p .streamlit && echo '[server]\nheadless = true\naddress = "0.0.0.0"\nport = 5000' > .streamlit/config.toml && streamlit run app.py --server.port 5000''']

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "streamlit_workflow"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
mkdir -p .streamlit && echo '[server]
headless = true
address = \"0.0.0.0\"
port = 5000' > .streamlit/config.toml && streamlit run new_app.py --server.port 5000"""
waitForPort = 5000

[[workflows.workflow]]
name = "streamlit_workflow"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
mkdir -p .streamlit && echo '[server]
headless = true
address = \"0.0.0.0\"
port = 5000' > .streamlit/config.toml && cat .streamlit/config.toml"""

[[ports]]
localPort = 5000
externalPort = 80
